<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.BmiActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/status"
                android:text="Under Weight"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                app:layout_constraintTop_toBottomOf="@+id/status"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/status1"
                android:text="Under Weight"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                app:layout_constraintTop_toBottomOf="@+id/status1"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/status2"
                android:text="Under Weight"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear"
        app:layout_constraintTop_toBottomOf="@+id/card"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/height"
            android:text="Height:"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/height_Feet"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:inputType="number"
            android:background="@drawable/button_bg"
            android:hint="5 feet"
            android:paddingStart="20dp"
            android:layout_width="80dp"
            android:layout_height="45dp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/height_inche"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/button_bg"
            android:hint="7 inch"
            android:inputType="number"
            android:paddingStart="10dp"
            android:layout_width="80dp"
            android:layout_height="45dp"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cintemeterText"
        app:layout_constraintTop_toBottomOf="@+id/linear"
       android:text="Centimeter:"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/cintemeter"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        app:layout_constraintStart_toEndOf="@+id/cintemeterText"
        android:hint="170 cm"
        android:paddingStart="20dp"
        android:visibility="gone"
        android:background="@drawable/button_bg"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_width="80dp"
        android:layout_height="45dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/weightText"
        app:layout_constraintTop_toBottomOf="@+id/cintemeterText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:text="Weight:"
        android:textSize="20sp"
        android:hint="7"
        android:paddingStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="45dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/weightEd"
        app:layout_constraintTop_toBottomOf="@+id/cintemeterText"
        app:layout_constraintStart_toEndOf="@+id/weightText"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/button_bg"
        android:hint="70 kg"
        android:inputType="number"
        android:paddingStart="10dp"
        android:layout_width="140dp"
        android:layout_height="45dp"/>

    <RadioGroup
        android:id="@+id/radio"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/weightText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioFoot"
            android:text="Foot"
            android:checked="true"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/radioCinte"
            android:text="Centimeter"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radio1"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/weightText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/male"
            android:text="Male"
            android:checked="true"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/female"
            android:text="Female"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <Button
        android:id="@+id/calculateBt"
        app:layout_constraintTop_toBottomOf="@+id/radio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:text="Calculate"
        android:textAllCaps="false"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/result"
        app:layout_constraintTop_toBottomOf="@+id/calculateBt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="150dp"
        android:text="BMI:"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/resultTx"
        app:layout_constraintTop_toBottomOf="@+id/calculateBt"
        app:layout_constraintStart_toEndOf="@+id/result"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:text=" 20.15"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>