<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ShowAlarmActivity">


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/timeEd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="enter time"
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:layout_height="60dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/selectTime"
        app:layout_constraintTop_toBottomOf="@id/timeEd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Select Time"
        android:background="@color/teal_700"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_width="300dp"
        android:layout_height="65dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/updateAlarm"
        app:layout_constraintTop_toBottomOf="@id/selectTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Update"
        android:background="@color/teal_700"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_width="300dp"
        android:layout_height="65dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelTime"
        app:layout_constraintTop_toBottomOf="@id/updateAlarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Cancel time"
        android:background="@color/teal_700"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_width="300dp"
        android:layout_height="65dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>