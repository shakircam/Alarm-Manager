<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.AlarmActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/timeView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:text="12:10 PM"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:layout_width="200dp"
        android:layout_height="80dp"/>

<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/selectTime"
    app:layout_constraintTop_toBottomOf="@id/timeView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="Select Time"
    android:background="@color/teal_700"
    android:layout_marginTop="30dp"
    android:textSize="30sp"
    android:textAllCaps="false"
    android:layout_width="300dp"
    android:layout_height="65dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setAlarm"
        app:layout_constraintTop_toBottomOf="@id/selectTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Set Alarm"
        android:background="@color/teal_700"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_width="300dp"
        android:layout_height="65dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelTime"
        app:layout_constraintTop_toBottomOf="@id/setAlarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Cancel time"
        android:background="@color/teal_700"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_width="300dp"
        android:layout_height="65dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>