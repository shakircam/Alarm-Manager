<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.AlarmTestActivity">


    <Button
        android:id="@+id/setexact"
        android:layout_marginTop="10dp"
        android:text="Set Exact"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/setinexactandRepeating"
        android:text="Set Inexact Repeating"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/setexact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/setexactandAllow"
        android:text="Set exact allow"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/setinexactandRepeating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/setAllow"
        android:text="Set Allow"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/setexactandAllow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/setAlarm"
        android:text="Alarm Clock"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/setAllow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>